<TIMER>:
    orientation: 'vertical'
    padding: 10
    canvas:
        Color:
            rgba: .5, .5, .5, .45
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [25,]
    FloatLayout:
        size_hint: 1, .15
        Label:
            id: lbl_nome_timer
            text: 'NOME'
            text_size: self.size
            color: (1,1,1,1)
            size_hint: None, 1
            size: 200, 0
            pos: self.parent.pos
        RoundedButtonEdit:
            radius: [25,]
            size_hint: None, None
            size: 40, 40
            pos: self.parent.x + self.parent.width - 40, self.parent.y - 10
            on_release: root.editar(root)
            Image:
                id: imgPlay
                y: self.parent.y
                x: self.parent.x
                size: self.parent.width, self.parent.height
                source: "Resources\Imgs\editt.png"
            
    Label:
        id: lbl_timer_timer
        text: '00:00:00'
        animation_ellipse: 360
        font_size: '26pt'
        color: (1,1,1,1)
        canvas.before:
            Color:
                rgba: 1,1,1,.5
            Ellipse:
                pos: (self.x + self.width/4), (self.y + self.height/4)
                segments: 1000
                angle_start: 0
                angle_end: 360
                size: (self.width/2), (self.height/2)
            Color:
                rgba: 0,.3,.4,1
            Ellipse:
                pos: (self.x + self.width/4) + 5, (self.y + self.height/4) + 5
                segments: 1000
                angle_start: 0
                angle_end: self.animation_ellipse
                size: (self.width/2) - 10, (self.height/2) - 10
            
    BoxLayout:
        orientation: 'horizontal'
        spacing: 10
        size_hint: None, None
        pos_hint: {'center_x': .5}
        size: 140, 70
        RoundedButton:
            size_hint: None, None
            size: 70, 70
            on_release:
                root.play_pause(lbl_timer_timer)
            Image:
                id: imgPlay
                y: self.parent.y
                x: self.parent.x + 5
                size: self.parent.width, self.parent.height
                source: "Resources\Imgs\Play.png"
        RoundedButton:
            size_hint: None, None
            size: 70, 70
            on_release:
                root.resetar()
            Image:
                y: self.parent.y
                x: self.parent.x
                size: self.parent.width, self.parent.height
                source: "Resources\Imgs\Reset.png"
            

