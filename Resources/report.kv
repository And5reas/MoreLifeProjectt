<JanelaReport>:
    colorTheme: 1, 1, 1, 1
    name: "report_screen"
    GridLayout:
        size: root.width, root.height
        cols: 2

        padding: 40
        spacing: 40

        BtnLateral:
            btn_color1: .5, .5, .5, 1
            btn_color2: .5, .5, .5, 1
            btn_color3: 51/255, 184/255, 18/255, .5
            btn_color4: .5, .5, .5, 1
            
        GridLayout:
            rows: 2

            BoxLayout:
                orientation: 'horizontal'

                Label:
                    id: lbl_msg
                    text: "Clique para gerar um relatório:"
                    color: 1,1,1,1
                    textSize: 30
                    pos_hint: {'x': .5, 'y': .35}

                Button:
                    id: btn_gerar_relatorio
                    text: "Gráfico"
                    on_press: root.gerar_relatorio()
                    pos_hint: {'center_x': 0.5, 'y': 0.8}
                    size_hint: None, None
                    size: 260, 50
                    padding: 20